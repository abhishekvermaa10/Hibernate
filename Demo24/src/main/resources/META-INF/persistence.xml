<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
	version="3.0">
	<persistence-unit name="Petistaan">
		<class>com.scaleupindia.entity.Owner</class>
		<class>com.scaleupindia.entity.Pet</class>
		<class>com.scaleupindia.entity.DomesticPet</class>
		<class>com.scaleupindia.entity.WildPet</class>
		<properties>
			<property name="jakarta.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3307/petistaan" />
			<property name="jakarta.persistence.jdbc.user" value="root" />
			<property name="jakarta.persistence.jdbc.password"
				value="root" />
			<property
				name="jakarta.persistence.schema-generation.database.action"
				value="update" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>